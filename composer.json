{
    "name": "sco/behaviors-bundle",
    "description": "Symfony bundle to add dynamics comments",
    "keywords": ["Symfony", "Doctrine", "Behaviors", "Comment", "Commentable"],
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Sarah CORDEAU",
            "email": "cordeau.sarah@gmail.com",
            "homepage": "https://github.com/SarahCordeau/BehaviorsBundle.git"
        }
    ],
    
    "require": {
        "php": "^7.1",
        "doctrine/doctrine-bundle": "^1.6",
        "doctrine/orm": "^2.5",
        "symfony/framework-bundle": "^3.0 || ^4.0",
        "symfony/form": "^3.0",
        "symfony/templating": "^3.0 || ^4.0",
        "symfony/twig-bundle": "^3.0 || ^4.0",
        "symfony/security-bundle": "^3.0 || ^4.0",
        "symfony/security-csrf": "^3.0 || ^4.0",
        "symfony/validator": "^3.0 || ^4.0",
        "friendsofsymfony/user-bundle": "^2.1",
        "symfony/swiftmailer-bundle": "^2.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "symfony/console": "^4.2",
        "symfony/phpunit-bridge": "^3.0",
        "symfony/yaml": "^3.0",
        "symfony/var-dumper": "^3.0",
        "symfony/browser-kit": "^3.0",
        "symfony/process": "^3.0"
    },
    
    "autoload": {
        "psr-4": {
            "Sco\\BehaviorsBundle\\": ""
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Sco\\BehaviorsBundle\\Tests\\": "/Tests/"
        }
    },
    
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "sort-packages": true
    },
    
    "minimum-stability": "dev"
}
